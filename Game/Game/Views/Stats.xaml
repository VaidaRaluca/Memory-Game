<Window x:Class="Game.Views.Stats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Statistics" Height="400" Width="400">
    <Grid>
        <ListView ItemsSource="{Binding Users}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Username" DisplayMemberBinding="{Binding Username}" />
                    <GridViewColumn Header="Played Games" DisplayMemberBinding="{Binding PlayedGames}" />
                    <GridViewColumn Header="Won Games" DisplayMemberBinding="{Binding WonGames}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
